{% extends '_templates/base.njk' %}

{% block page_title %}Music{% endblock %}

{% block page_description %}A page that shows Queen's discography{% endblock %}

{% block content %}
<article class="container">
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="img-fluid" src="img/discs/Queen_A_Day_at_the_Races.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="img/discs/Queen_A_Night_At_The_Opera.png" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="img/discs/Queen_Queen.png" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
  <div class="row">
    {%for album in queen.discography%}
      <div class="col-md-4">
        <div class="image">
          <img src="img/discs/{{ album.image }}" class="img-fluid">
          <div class="image-overlay">
            <div class="image-info">{{ album.title }}>
            </div>
            <p class="image-description">{{ album.year}}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</article>


{% endblock %}

